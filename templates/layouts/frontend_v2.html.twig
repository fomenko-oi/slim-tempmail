<!DOCTYPE html>
<html lang="ru">
<head>
    {% block head %}
        <title>Temp Mail - Disposable Temporary Email</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="Keep spam out of your mail and stay safe - just use a disposable temporary email address! Protect your personal email address from spam with Temp-mail" />
        <meta name="keywords" content="free, temporary, email, disposable, mail, email address" />

        <link rel="apple-touch-icon" href="/images/icon-temp-mail-mobile@2.png">
        <link rel="android-touch-icon" href="/images/icon-temp-mail-mobile.png" />
        <link href="images/favicon.ico" rel="shortcut icon">

        {% for language in languages %}
            <link rel="alternate" hreflang="{{ language }}" href="/{{ language }}/" />
        {% endfor %}

        <link rel="stylesheet" href="/v2/css/grayshift.min.css" />
        <link rel="stylesheet" href="/v2/css/swipe.min.css" />
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css" integrity="sha384-AKT9MKPmIq4VMihDqOB6HeDHSsXGyf92WHPCSwHAZPIVJpD8Jv6dmfTLZeLDvV4O" crossorigin="anonymous">

        <style>
            img {
                opacity: 1;
                transition: opacity 0.3s;
            }

            img[data-src] {
                opacity: 0;
            }
            #loader{width:100%;height:5px;position:relative;display: none}
            #progress{position:relative;width:0;height:100%;background-color:#00b22d}
        </style>
    {% endblock %}
</head>
<body>

<div class="d-flex flex-column flex-lg-row">
    {% include 'app2/_partials/_navbar.html.twig' %}

    {% include 'app2/_partials/_sidebar.html.twig' %}

    {% block content %}{% endblock %}
</div>

{% block scripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" integrity="sha384-6khuMg9gaYr5AxOqhkVIODVIvm9ynTT5J4V1cfthmT+emCG6yVmEZsRHdxlotUnm" crossorigin="anonymous"></script>
    <script src="/v2/js/offcanvas.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.1/axios.min.js"></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.4/socket.io.min.js'></script>
    <script>
        axios.defaults.baseURL = '/{{ lang }}/';
        window.websocketUrl = '//127.0.0.1:8084';
        window.userMail = '{{ user_email|replace({'@': '.'}) }}';
    </script>
    <script src="/js/app.js"></script>
{% endblock %}

</body>
</html>
